<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smartware Solution</title>
    <environment include="Development">
        <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="~/css/bootstrap-slider.min.css">
        <link rel="stylesheet" type="text/css" href="~/css/fontawesome-all.min.css">
        <link rel="stylesheet" type="text/css" href="~/css/style-green.css">
        <link rel="stylesheet" type="text/css" href="~/css/slick.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.0/animate.css" />
    </environment>
</head>
<body>
    <div id="header-holder" class="main-header">
        <div class="bg-animation">
            <div class="graphic-show">
                <img class="fix-size" src="~/images/graphic1.png" alt="">
                <img class="img img1" src="~/images/graphic1.png" alt="">
                <img class="img img2" src="~/images/graphic2.png" alt="">
                <img class="img img3" src="~/images/graphic3.png" alt="">
            </div>
        </div>
        <nav id="nav" class="navbar navbar-default navbar-full">
            <div class="container-fluid">
                <div class="container container-nav">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="navbar-header">
                                <button aria-expanded="false" type="button" class="navbar-toggle collapsed"
                                        data-toggle="collapse" data-target="#bs">
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                <a class="logo-holder" href='@Url.Action("Index", "Home")'>
                                    <div class="logo" style="width:500px;height:18px"></div>
                                </a>
                            </div>
                            <div style="height: 1px;" role="main" aria-expanded="false" class="navbar-collapse collapse"
                                 id="bs">
                                <ul class="nav navbar-nav navbar-right">
                                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "page-scroll" })</li>
                                    
                                    <li class="dropdown unity-menu">
                                        @Html.ActionLink("Service", "Index", "Service", null, new { @class = "page-scroll" })
                                        <ul class="dropdown-menu dropdown-unity">
                                            <li>
                                                <a class=" " href="#">
                                                    <div class="unity-box">
                                                        <div class="unity-title">
                                                            Consultancy
                                                        </div>
                                                    </div>
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#">About Us </a>
                                    </li>
                                    <li class="dropdown unity-menu">
                                        <a href="#">Career <i class="fas fa-caret-down"></i></a>
                                        <ul class="dropdown-menu dropdown-unity">
                                            <li>
                                                <a class=" " href="#">
                                                    <div class="unity-box">
                                                        <div class="unity-title">
                                                            Backend Engineer
                                                        </div>
                                                    </div>
                                                </a>
                                            </li>
                                            <li>
                                                <a class="" href="#">
                                                    <div class="unity-box">
                                                        <div class="unity-title">
                                                            Frontend Engineer
                                                        </div>
                                                    </div>
                                                </a>
                                            </li>

                                            <li>
                                                <a class=" " href="#">
                                                    <div class="unity-box">
                                                        <div class="unity-title">
                                                            UI/UX
                                                        </div>
                                                    </div>
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                    <li class="support-button-holder support-dropdown">
                                        <a href="#">Contact Us</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <div id="top-content" class="container-fluid">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div id="main-slider">
                            <div class="slide">
                                <div class="spacer"></div>
                                <span class=" animated wobble big-title">LEARN | BUILD | IMPACT.</span>
                                <p class="animated slideInDown">
                                    Designing Bespoke Products Fitting Your Needs and
                                    Deliver Satisfaction.
                                </p>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <img class="header-graphic" src="~/images/graphic1.png" alt="" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="container">
            @RenderBody()
        </div>
    </div>

    <div id="message1" class="container-fluid message-area normal-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <div class="text-other-color1">Are you ready?</div>
                    <div class="text-other-color2">Get On Board With Us Today.</div>
                </div>
                <div class="col-sm-12 col-md-6">
                    <div class="buttons-holder">
                        <a href="#" class="ybtn ybtn-accent-color">Contact Us</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="footer" class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-xs-6 col-sm-4 col-md-3">
                    <div class="address-holder">
                        <img style="width:60%" src="~/images/smartlogo.png" alt="">

                        <div class="address">

                            <p>
                                Smartware solutions is a software development hub that champions diverse project from
                                even more diverse industries; committed to learning client needs, building
                                innovative
                                solutions and impacting the seamlessness that the IT world demands.<br>
                                Nigeria.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-2 col-md-2">
                    <div class="footer-menu-holder">
                        <h4>Product</h4>
                        <ul class="footer-menu">
                            <li><a href="">Ipos Bi</a></li>
                            <li><a href="">Smartfuel</a></li>
                            <li><a href="">Companion Card</a></li>
                            <li><a href="">Mobile Payment SDK</a></li>
                            <li><a href="">ALAT</a></li>
                            <li><a href="">Android SDK</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-2 col-md-3">
                    <div class="footer-menu-holder">
                        <h4>Expertise</h4>
                        <ul class="footer-menu">
                            <li><a href="">Web App Development</a></li>
                            <li><a href="">Mobile App Development</a></li>
                            <li><a href="">Database Server Management</a></li>
                            <li><a href="">Consultancy</a></li>
                            <li><a href="">Smart Tutoring</a></li>
                            <li><a href="">Cloud Computing</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-3 col-md-3">
                    <div class="address-holder">
                        <h4>Contact</h4>
                        <div class="phone"><i class="fas fa-phone"></i>+2347083639539</div>
                        <div class="email"><i class="fas fa-envelope"></i> smartwareng@live.com</div>
                        <div class="email">
                            <span>
                                <i class="fas fa-map-marker"></i>
                                No 2J,Obasa Close,<br>
                                Oba-Akran Avenue, Ikeja, Lagos State,
                                Nigeria.
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-1 col-md-1">
                    <div class="social-menu-holder">
                        <ul class="social-menu">
                            <li><a href=""><i class="fab fa-facebook"></i></a></li>
                            <li><a href=""><i class="fab fa-instagram"></i></a></li>
                            <li><a href=""><i class="fab fa-twitter"></i></a></li>
                            <li><a href=""><i class="fab fa-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <environment include="Development">
        <script src="~/js/jquery.min.js"></script>
        <script src="~/js/bootstrap.min.js"></script>
        <script src="~/js/bootstrap-slider.min.js"></script>
        <script src="~/js/slick.min.js"></script>
        <script src="~/js/main.js"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
